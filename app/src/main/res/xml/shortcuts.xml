<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="balance"
        android:enabled="true"
        android:icon="@drawable/ic_amount"
        android:shortcutShortLabel="@string/shortcut_balance_title"
        android:shortcutLongLabel="@string/shortcut_balance_title"
        android:shortcutDisabledMessage="@string/shortcut_balance_title">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="net.soluspay.cashq"
            android:targetClass="net.soluspay.cashq.BalanceInquiryActivity" />
        <!-- If your shortcut is associated with multiple intents, include them
             here. The last intent in the list determines what the user sees when
             they launch this shortcut. -->
        <categories android:name="android.shortcut.conversation" />
    </shortcut>
    <!-- Specify more shortcuts here. -->

    <shortcut
        android:shortcutId="qr"
        android:enabled="true"
        android:icon="@drawable/image_qr"
        android:shortcutShortLabel="@string/shortcut_qr"
        android:shortcutLongLabel="@string/shortcut_qr_details"
        android:shortcutDisabledMessage="@string/shortcut_qr_details">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="net.soluspay.cashq"
            android:targetClass="net.soluspay.cashq.QRPayActivity" />
        <!-- If your shortcut is associated with multiple intents, include them
             here. The last intent in the list determines what the user sees when
             they launch this shortcut. -->
        <categories android:name="android.shortcut.conversation" />
    </shortcut>
</shortcuts>